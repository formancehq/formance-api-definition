{
  "name": "@formance/api-std",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/src/index.js",
  "tspMain": "lib/main.tsp",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    },
    "./testing": {
      "types": "./dist/src/testing/index.d.ts",
      "default": "./dist/src/testing/index.js"
    }
  },
  "devDependencies": {
    "@types/node": "^20.14.5",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@typespec/http": "^0.57.0",
    "@typespec/library-linter": "^0.57.0",
    "@typespec/openapi": "^0.57.0",
    "eslint": "^9.5.0",
    "prettier": "^3.3.2",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "tsc && npm run build:tsp",
    "watch": "tsc --watch",
    "build:tsp": "tsp compile . --warn-as-error --import @typespec/library-linter --no-emit",
    "test": "node --test ./dist/test/",
    "lint": "eslint src/ test/ --report-unused-disable-directives --max-warnings=0",
    "lint:fix": "eslint . --report-unused-disable-directives --fix",
    "format": "prettier .  --write",
    "format:check": "prettier --check ."
  },
  "private": true,
  "peerDependencies": {
    "@typespec/compiler": "^0.56.0",
    "@typespec/http": "^0.56.0",
    "@typespec/openapi": "^0.56.0"
  }
}
